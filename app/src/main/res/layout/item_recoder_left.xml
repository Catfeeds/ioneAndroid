<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
	android:layout_marginTop="5dp"
    >
	<ImageView 
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
	    android:src="@mipmap/select_account_photo_four"
	    android:id="@+id/icon"	
	    />
	<FrameLayout 
	    android:id="@+id/id_recoder_lenght"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/icon"
	    android:background="@drawable/chat_from_img_bg_normal"
	    >
	    <View android:id="@+id/id_recoder_anim"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_gravity="center_vertical|start"
	        android:background="@drawable/chatfrom_voice_playing_f3"
	        
	        />
	    
	    
	</FrameLayout>
	<TextView 
	    android:id="@+id/id_recoder_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/id_recoder_lenght"
		android:text="1'"
		android:layout_marginLeft="3dp"
		android:textColor="#ff777777"
	    />
	
</RelativeLayout>