<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
	android:layout_marginTop="5dp"
    >
	<ImageView 
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="5dp"
	    android:src="@mipmap/select_account_photo_four"
	    android:id="@+id/icon"	
	    />
	<FrameLayout 
	    android:id="@+id/id_recoder_lenght"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@id/icon"
	    android:background="@drawable/chat_to_img_bg_normal"
	    >
	    <View android:id="@+id/id_recoder_anim"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_gravity="center_vertical|end"
	        android:background="@drawable/chatto_voice_playing"
	        
	        />
	    
	    
	</FrameLayout>
	<TextView 
	    android:id="@+id/id_recoder_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/id_recoder_lenght"
		android:text="1'"
		android:layout_marginRight="3dp"
		android:textColor="#ff777777"
	    />
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toStartOf="@+id/id_recoder_time"
		android:src="@mipmap/msg_state_fail_resend"
		android:id="@+id/iv_fail"
		/>
</RelativeLayout>